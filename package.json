{
  "name": "@defi-wonderland/solidity-utils",
  "version": "0.01",
  "description": "Utility contracts for Solidity development",
  "files": ["solidity/contracts", "solidity/interfaces", "solidity/test"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defi-wonderland/solidity-utils.git"
  },
  "author": "Wonderland",
  "license": "MIT",
  "scripts": {
    "build": "forge build",
    "test": "forge test -vvv",
    "coverage": "forge coverage",
    "lint:fix": "forge fmt",
    "postinstall": "forge install --no-git",
    "lint:check": "forge fmt --check",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "husky": "^8.0.3",
    "lint-staged": ">=10"
  },
  "lint-staged": {
    "*.sol": "forge fmt"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.8.1",
    "ds-test": "https://github.com/dapphub/ds-test",
    "forge-std": "https://github.com/foundry-rs/forge-std"
  }
}
